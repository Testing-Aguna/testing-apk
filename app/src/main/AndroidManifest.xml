<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aguna.app">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/aguna_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aguna_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Agunaapp"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        >
        <activity android:name=".presentation.MainActivity" />
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.SliderActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>