<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aguna.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/aguna_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aguna_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Agunaapp">
        <activity android:name=".presentation.ProfileActivity"></activity>
        <activity
            android:name=".presentation.ProfileAcitivity"
            android:label="@string/title_activity_profile_acitivity"
            android:theme="@style/Theme.Agunaapp.NoActionBar" />
        <activity android:name=".presentation.MainActivity" />
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.SliderActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>