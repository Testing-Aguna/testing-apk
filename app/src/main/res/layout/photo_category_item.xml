<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/txt_name_item_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:text="Organik"
        android:textSize="14sp"
        android:textColor="@color/color_prev_trans"
        android:fontFamily="@font/montserrat_semibold"
        />

    <HorizontalScrollView
        android:id="@+id/scroll_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name_item_photo"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_btn_solid"
                android:text="Tambahkan Foto"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:paddingTop="30dp"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_add_24"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                />

            <ImageView
                android:id="@+id/img1_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_photo"
                />

            <ImageView
                android:id="@+id/img2_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_photo"
                />

            <ImageView
                android:id="@+id/img3_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_photo"
                />

        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>