<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.details.jemput.JemputFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">
            <ImageButton
                android:id="@+id/back_btn_details_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                />
            <TextView
                android:id="@+id/txt_details_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/back_btn_details_category"
                app:layout_constraintTop_toTopOf="@id/back_btn_details_category"
                app:layout_constraintBottom_toBottomOf="@id/back_btn_details_category"
                android:layout_marginHorizontal="30dp"
                android:text="Detail / Jemput"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_medium"
                />
            <ImageView
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintTop_toBottomOf="@id/back_btn_details_category"
                android:layout_marginVertical="10dp"
                android:src="@color/border"
                >
            </ImageView>
            <TextView
                android:id="@+id/txt_pilih_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sep"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Pilih Waktu"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />
            <TextView
                android:id="@+id/txt_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/sep"
                android:text="Time"
                app:layout_constraintRight_toLeftOf="@id/btn_pick_date"
                android:layout_marginEnd="20dp"
                />
            <ImageButton
                android:id="@+id/btn_pick_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/sep"
                android:src="@drawable/arrow_blue"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/txt_pilih_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_pilih_waktu"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Pilih Tanggal"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />
            <TextView
                android:id="@+id/txt_label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_pilih_waktu"
                android:text="Date"
                app:layout_constraintRight_toLeftOf="@id/btn_pick_date"
                android:layout_marginEnd="20dp"
                />
            <ImageButton
                android:id="@+id/btn_pick_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_pilih_waktu"
                android:src="@drawable/arrow_blue"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/txt_lokasi_pengambilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_pilih_tanggal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Lokasi Pengambilan"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lokasi Pengambilan"
                app:layout_constraintTop_toBottomOf="@+id/txt_lokasi_pengambilan"
                android:background="@drawable/bg_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                android:paddingEnd="30dp"/>
            <ImageButton
                android:id="@+id/btn_pick_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lokasi_pengambilan"
                app:layout_constraintRight_toRightOf="@+id/txt_location"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toBottomOf="@+id/txt_location"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/edit_txt_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_phone"
                android:background="@drawable/bg_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txt_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan Tambahan"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toBottomOf="@+id/edit_txt_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/edit_txt_note"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_note"
                android:background="@drawable/bg_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>