<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_reset_password"
        android:layout_marginTop="50dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_lock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Lupa Kata Sandi"
        android:textColor="#121212"
        android:textSize="20sp"
        android:textFontWeight="600"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="15dp"
        >
    </TextView>

    <TextView
        android:id="@+id/txt_info_forgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="28dp"
        android:text="Masukkan email yang telah terdaftar untuk mengatur ulang kata sandi kamu"
        android:textSize="14sp"
        android:textColor="#121212"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        >
    </TextView>

    <TextView
        android:id="@+id/txt_email_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_info_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="@color/txt_color_sign_item"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        >
    </TextView>

    <EditText
        android:id="@+id/edit_email_forgot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/txt_email_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15dp"
        android:textColor="@color/txt_color_sign"
        android:hint="Masukkan Email"
        android:paddingVertical="14dp"
        android:paddingHorizontal="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bg_edit_text"
        >
    </EditText>
    <TextView
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_email_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:paddingHorizontal="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bg_btn_sign"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>