<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/color1"
                >

                <ProgressBar
                    android:id="@+id/home_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_aguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/aguna"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    />

                <ImageButton
                    android:id="@+id/btn_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_notifications"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_aguna"
                    android:layout_marginHorizontal="30dp"
                    android:src="@drawable/aguna_logo"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/txt_hai_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/img_user"
                    app:layout_constraintTop_toTopOf="@id/img_user"
                    app:layout_constraintBottom_toBottomOf="@id/img_user"
                    android:layout_marginStart="20dp"
                    android:text="@string/hai_aguna"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    >
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_top"
                app:layout_constraintBottom_toBottomOf="@id/layout_top"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    >
                    <TextView
                        android:id="@+id/transaction_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/previous_transactions"
                        android:textSize="14sp"
                        android:textColor="@color/color_prev_trans"
                        android:fontFamily="@font/montserrat_medium"
                        />
                    <TextView
                        android:id="@+id/transaction_prev_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/transaction_prev"
                        app:layout_constraintLeft_toLeftOf="@id/transaction_prev"
                        app:layout_constraintRight_toRightOf="@id/transaction_prev"
                        android:layout_marginTop="8dp"
                        android:text="Rp50.000"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/sep_card"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toRightOf="@id/transaction_prev"
                        app:layout_constraintRight_toLeftOf="@id/txt_rating"
                        android:src="@color/color1"
                        />
                    <TextView
                        android:id="@+id/txt_rating"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:text="@string/your_rating"
                        android:textColor="@color/color_prev_trans"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_medium"
                        />
                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev_val"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toLeftOf="@id/txt_rating"
                        >
                    </ImageView>
                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev_val"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toRightOf="@id/star1"
                        app:layout_constraintRight_toLeftOf="@id/star3"
                        android:layout_marginStart="5dp"
                        >
                    </ImageView>
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev_val"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toRightOf="@id/star2"
                        app:layout_constraintRight_toLeftOf="@id/star4"
                        android:layout_marginStart="5dp"
                        >
                    </ImageView>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev_val"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toRightOf="@id/star3"
                        app:layout_constraintRight_toLeftOf="@id/star5"
                        android:layout_marginStart="5dp"
                        >
                    </ImageView>
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        app:layout_constraintTop_toTopOf="@id/transaction_prev_val"
                        app:layout_constraintBottom_toBottomOf="@id/transaction_prev_val"
                        app:layout_constraintLeft_toRightOf="@id/star4"
                        app:layout_constraintRight_toRightOf="@id/txt_rating"
                        android:layout_marginStart="5dp"
                        >
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_info_trash"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/crd_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_sell_trash"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_btn"
                android:text="@string/trash_info"
                android:textColor="@color/color1"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sell_trash"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_info_trash"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn_info_trash"
                android:layout_marginEnd="30dp"
                android:text="@string/sell_trash"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/bg_btn_solid"
                >
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@id/btn_info_trash"
                android:layout_marginTop="20dp"
                android:src="@color/border"
                />
            <TextView
                android:id="@+id/txt_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sep"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/offer"
                android:textSize="18sp"
                android:textColor="#B4000000"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/txt_offer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_offer"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:text="@string/dapatkan_berbagai_penawaran_menarik_untuk_anda"
                android:textSize="12sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_offer_info"
                android:layout_marginTop="10dp"
                >
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/txt_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_offer"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/news"
                android:textSize="18sp"
                android:textColor="#B4000000"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/txt_news_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_news"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:text="@string/berita_menarik_aguna_siap_menemani_hari_anda"
                android:textSize="12sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_news_info"
                android:layout_marginTop="10dp"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>